# ===============================================================
# Flask Application Settings
# ===============================================================
# Change to 'production' when deploying. Use 'development' for local testing.
FLASK_ENV="development"
# A secret key for session management and other security features.
# Generate a random one for production, e.g., using: python -c 'import os; print(os.urandom(24).hex())'
SECRET_KEY="your_very_secret_key_here"


# ===============================================================
# WhatsApp & Meta Configuration
# ===============================================================
# Your Meta App's credentials. Found in your Meta App Dashboard under "Basic Settings".
APP_ID="YOUR_META_APP_ID"
APP_SECRET="YOUR_META_APP_SECRET"

# The access token for the WhatsApp Business API.
# Found in your Meta App Dashboard -> WhatsApp -> API Setup.
ACCESS_TOKEN="YOUR_WHATSAPP_ACCESS_TOKEN"

# Your specific WhatsApp phone number ID for sending messages.
# Found in your Meta App Dashboard -> WhatsApp -> API Setup.
PHONE_NUMBER_ID="YOUR_WHATSAPP_PHONE_NUMBER_ID"

# The WhatsApp ID of the recipient for testing (your phone number with country code).
RECIPIENT_WAID="YOUR_PHONE_NUMBER_FOR_TESTING"

# The verification token you create to secure your webhook.
VERIFY_TOKEN="A_RANDOM_AND_SECURE_VERIFICATION_TOKEN"

# The Graph API version to use. It's usually safe to use the latest version.
VERSION="v20.0"

# The base URL for the Facebook Graph API.
GRAPH_API_URL="https://graph.facebook.com/v20.0"


# ===============================================================
# Google Gemini AI Configuration
# ===============================================================
# Your API key from Google AI Studio (https://aistudio.google.com/).
GOOGLE_API_KEY="YOUR_GOOGLE_AI_API_KEY"

# The specific Gemini model you want to use. 'gemini-1.5-flash' is a good, fast choice.
GEMINI_MODEL="gemini-1.5-flash"


# ===============================================================
# Database Configuration
# ===============================================================
# The full connection string for your database (e.g., PostgreSQL from Supabase).
# Example: postgresql://postgres:[YOUR-PASSWORD]@[HOST]:5432/postgres
DATABASE_URL="YOUR_DATABASE_CONNECTION_STRING"


# ===============================================================
# Business Logic Configuration
# ===============================================================
# The URL for your Calendly or other booking service.
CALENDLY_LINK="https://calendly.com/your-link"